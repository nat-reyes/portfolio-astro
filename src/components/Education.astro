---
import Link from "../icons/Link.astro"
import LinkButton from "../components/LinkButton.astro"
import { Image } from 'astro:assets';
---

<div class="grid grid-cols-2 gap-4 px-2">
    {
        Astro.props.data.map(({certifiedByIcon, title, tags, link}) => (
                <article class="flex flex-col xs:flex xs:flex-row  xs:space-y-1 xs:space-x-4">
                        <div class="mt-2 w-[40%] xs:w-[25%] xs:h-[3rem] flex flex-col items-center  gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:w-10 md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:hover:bg-gray-800/50">
                            <Image alt="education place"
                                 class="w-10 h-10object-cover object-top xs:w-[3rem] xs:h-[3.5rem] transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                                   loading="lazy" src={certifiedByIcon}/>
                        </div>

                    <div class="w-[60%] md:max-w-lg xs:w-[75%]">
                        <h3 class="text-[16px] font-bold text-gray-800 dark:text-gray-100 xs:text-sm">
                            {title}
                        </h3>
                        {
                            tags?.length > 0 && (
                                        <div class="flex flex-wrap mt-2">
                                            <ul class="flex flex-row mb-2 gap-x-2">
                                                {tags.map((tag) => (
                                                        <li>
                                                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2  lg:text-xs xs:text-[0.5rem]`}>{tag.name}</span>
                                                        </li>
                                                ))}
                                            </ul>
                                        </div>
                            )
                        }
                        <div>
                            {link && (
                                    <LinkButton href={link}>
                                        <Link class="size-2"/>
                                       <span class="lg:text-xs xs:text-[0.5rem]">Preview</span>
                                    </LinkButton>
                            )}
                        </div>
                    </div>
                </article>
        ))
    }
</div>